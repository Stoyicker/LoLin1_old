<manifest package="org.jorge.lolin1"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/app_icon"
		android:logo="@drawable/icon_section1"
		android:theme="@style/AppTheme">
		<activity
			android:name="org.jorge.lolin1.activities.InitialActivity"
			android:configChanges="orientation|screenSize"
			android:label="@string/app_name"
			android:logo="@drawable/app_icon">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.NewsActivity"
			android:configChanges="orientation|screenSize"
			android:label="@string/title_activity_news"
			android:logo="@drawable/app_icon">
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.ShareToFBActivity"
			android:configChanges="orientation|screenSize"
			android:icon="@drawable/icon_fb_share"
			android:label="@string/title_activity_facebook"
			android:parentActivityName="org.jorge.lolin1.activities.SettingsActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="SettingsActivity"/>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.PolicyActivity"
			android:configChanges="orientation|screenSize"
			android:label="@string/title_activity_policy"
			android:logo="@drawable/app_icon"
			android:parentActivityName="org.jorge.lolin1.activities.SettingsActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="SettingsActivity"/>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.ShareToTwitterActivity"
			android:configChanges="orientation|screenSize"
			android:label="@string/title_activity_twitter"
			android:logo="@drawable/icon_fb_share"
			android:parentActivityName="org.jorge.lolin1.activities.SettingsActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="SettingsActivity"/>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.RateActivity"
			android:configChanges="orientation|screenSize"
			android:label="@string/title_activity_rate"
			android:logo="@drawable/icon_rate"
			android:parentActivityName="org.jorge.lolin1.activities.SettingsActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="SettingsActivity"/>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.ServerAndLangChooserActivity"
			android:configChanges="orientation|screenSize"
			android:label="@string/title_activity_server_and_lang"
			android:logo="@drawable/app_icon">
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.AdsActivity"
			android:configChanges="orientation|screenSize"
			android:label="@string/title_activity_ads"
			android:logo="@drawable/app_icon">
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.jorge.lolin1.activities.SettingsActivity"
			android:label="@string/title_activity_settings"
			android:logo="@drawable/icon_settings"
			android:parentActivityName="org.jorge.lolin1.activities.NewsActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="NewsActivity"/>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
	</application>

</manifest>
