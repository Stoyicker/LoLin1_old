<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.jorge.lolin1"
	>

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/app_icon"
		android:logo="@drawable/icon_section1"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		>
		<activity
			android:name=".activities.InitialActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.NewsActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.ShareToFBActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.PolicyActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.ShareToTwitterActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.RateActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.ServerAndLangChooserActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.AdsActivity"
			android:configChanges="orientation|screenSize"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
	</application>

</manifest>
