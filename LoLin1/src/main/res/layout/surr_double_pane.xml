<android.support.v4.widget.DrawerLayout
	android:id="@+id/drawer_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="org.jorge.lolin1.ui.activities.SurrReaderActivity">
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:layout_marginBottom="@dimen/activity_vertical_margin"
	              android:layout_marginLeft="@dimen/activity_horizontal_margin"
	              android:layout_marginRight="@dimen/activity_horizontal_margin"
	              android:layout_marginTop="@dimen/activity_vertical_margin">
		<fragment
			android:id="@+id/fragment_list"
			android:name="org.jorge.lolin1.ui.frags.SurrListFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="4"
			tools:layout="@layout/fragment_news_feed"/>
		<fragment
			android:id="@+id/fragment_web_viewer"
			android:name="org.jorge.lolin1.ui.frags.WebViewerFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/pane_separator"
			android:layout_weight="1"
			tools:layout="@layout/fragment_web_viewer"/>
	</LinearLayout>
	<fragment
		android:id="@+id/navigation_drawer"
		android:name="org.jorge.lolin1.ui.frags.NavigationDrawerFragment"
		android:layout_width="@dimen/navigation_drawer_width"
		android:layout_height="match_parent"
		android:layout_gravity="left"
		tools:layout="@layout/fragment_navigation_drawer"/>
</android.support.v4.widget.DrawerLayout>
	<!-- END_INCLUDE(all) -->
