<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<TextView
		android:id="@+id/chat_credentials_component_title"
		style="@style/CredentialsComponentTitleStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<EditText
		android:id="@+id/chat_credentials_component_content"
		android:layout_width="wrap_content"
		style="@style/CredentialsComponentContentStyle"
		android:background="@drawable/chat_component_edittext_selector"
		android:layout_height="wrap_content"
		android:inputType="textNoSuggestions"/>
</LinearLayout>