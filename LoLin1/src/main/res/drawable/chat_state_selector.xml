<selector
	xmlns:app="http://schemas.android.com/apk/res/org.jorge.lolin1"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item app:state_online="true" app:state_away="false" app:state_unknown="false">
		<shape android:shape="oval">
			<gradient
				android:startColor="@android:color/holo_green_light"
				android:angle="180"
				android:endColor="@android:color/holo_green_dark"
				/>
			<size
				android:width="@dimen/chat_status_circle_dimen"
				android:height="@dimen/chat_status_circle_dimen"/>
		</shape>
	</item>
	<item app:state_online="false" app:state_away="true" app:state_unknown="false">
		<shape android:shape="oval">
			<gradient
				android:startColor="@android:color/holo_red_light"
				android:angle="180"
				android:endColor="@android:color/holo_red_dark"
				/>
			<size
				android:width="@dimen/chat_status_circle_dimen"
				android:height="@dimen/chat_status_circle_dimen"/>
		</shape>
	</item>
	<item app:state_online="false" app:state_away="false" app:state_unknown="true">
		<shape android:shape="oval">
			<gradient
				android:startColor="@android:color/white"
				android:angle="180"
				android:endColor="@android:color/darker_gray"
				/>
			<size
				android:width="@dimen/chat_status_circle_dimen"
				android:height="@dimen/chat_status_circle_dimen"/>
		</shape>
	</item>
</selector>