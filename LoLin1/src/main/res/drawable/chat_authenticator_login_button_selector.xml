<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
		<shape android:shape="rectangle">
			<corners android:radius="3dip"/>
			<stroke android:width="1dip" android:color="#C2CFC7"/>
			<gradient android:angle="-90" android:startColor="#BFBABD" android:endColor="#DED7DB"/>
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<corners android:radius="3dip"/>
			<stroke android:width="1dip" android:color="#c53e2b"/>
			<gradient android:angle="-90" android:startColor="#E39424" android:endColor="#ff6c52"/>
		</shape>
	</item>
	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<corners android:radius="3dip"/>
			<stroke android:width="1dip" android:color="#c53e2b"/>
			<solid android:color="#E39424"/>
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="3dip"/>
			<stroke android:width="1dip" android:color="#c53e2b"/>
			<gradient android:angle="-90" android:startColor="#ff6c52" android:endColor="#E39424"/>
		</shape>
	</item>
</selector>