<resources>
	<style name="AppTheme" parent="android:Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/ActionBarStyle</item>
	</style>
	<style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/theme_light_blue</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="NavigationDrawerStyle">
		<!-- Per the design guidelines, navigation drawers should be between 240dp and 320dp:
 https://developer.android.com/design/patterns/navigation-drawer.html -->
		<item name="android:width">@dimen/navigation_drawer_width</item>
		<item name="android:background">@color/theme_dark_blue</item>
	</style>
	<style name="NewsFeedTextWithShadowStyle">
		<item name="android:textColor">@color/theme_black</item>
		<item name="android:textSize">@dimen/news_feed_title_size</item>
		<item name="android:shadowColor">@color/theme_white</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="SurrFeedTextWithShadowStyle">
		<item name="android:textColor">@color/theme_white</item>
		<item name="android:textSize">@dimen/news_feed_title_size</item>
		<item name="android:shadowColor">@color/theme_dark_orange</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="NavigationDrawerTextWithShadowStyle">
		<item name="android:textColor">@color/theme_white</item>
		<item name="android:shadowColor">@color/theme_dark_orange</item>
		<item name="android:shadowDx">2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:textSize">@dimen/navigation_drawer_text_size</item>
	</style>
</resources>
