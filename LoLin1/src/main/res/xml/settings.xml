<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/pref_cat_general">
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/pref_title_data"
			android:summaryOff="@string/pref_summary_data_off"
			android:summaryOn="@string/pref_summary_data_on"
			android:title="@string/pref_title_data"
			/>
		<ListPreference
			android:defaultValue="@string/server_euw"
			android:entries="@array/servers"
			android:entryValues="@array/servers"
			android:key="@string/pref_title_server"
			android:title="@string/pref_title_server"
			/>
		<ListPreference
			android:defaultValue="@string/lang_en"
			android:entries="@array/lang_euw"
			android:entryValues="@array/lang_euw"
			android:key="@string/pref_title_lang"
			android:title="@string/pref_title_lang"
			/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_cat_jun">
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="@string/pref_title_timers_reset"
			android:summary="@string/pref_summary_timers_reset"
			android:title="@string/pref_title_timers_reset"
			/>
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="@string/pref_title_display"
			android:summary="@string/pref_summary_display"
			android:title="@string/pref_title_display"
			/>
		<org.jorge.lolin1.custom.TimePickerPreference
			android:defaultValue="@string/pref_default_baron_respawn"
			android:key="@string/pref_title_baron_respawn"
			android:title="@string/pref_title_baron_respawn"
			/>
		<org.jorge.lolin1.custom.TimePickerPreference
			android:defaultValue="@string/pref_default_dragon_respawn"
			android:key="@string/pref_title_dragon_respawn"
			android:title="@string/pref_title_dragon_respawn"
			/>
		<org.jorge.lolin1.custom.TimePickerPreference
			android:defaultValue="@string/pref_default_buff_respawn"
			android:key="@string/pref_title_buff_respawn"
			android:title="@string/pref_title_buff_respawn"
			/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_cat_chat">
		<EditTextPreference
			android:defaultValue="@string/pref_default_username"
			android:key="@string/pref_title_username"
			android:title="@string/pref_title_username"/>
		<EditTextPreference
			android:defaultValue="@string/pref_default_pass"
			android:key="@string/pref_title_pass"
			android:password="true"
			android:title="@string/pref_title_pass"
			/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_cat_share">
		<Preference android:title="@string/pref_title_facebook">
			<intent android:action="org.jorge.lolin1.activities.SHARETOFBACTIVITY"
				/>
		</Preference>
		<Preference android:title="@string/pref_title_twitter">
			<intent android:action="org.jorge.lolin1.activities.SHARETOTWITTERACTIVITY"
				/>
		</Preference>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_cat_about">
		<Preference android:title="@string/pref_title_rate">
			<intent android:action="org.jorge.lolin1.activities.RATEACTIVITY"
				/>
		</Preference>
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="@string/pref_title_ads"
			android:summary="@string/pref_summary_ads"
			android:title="@string/pref_title_ads"
			/>
		<Preference android:title="@string/pref_title_developer">
			<intent android:action="http://www.linkedin.com/in/jorgediazbenitosoriano"
				/>
		</Preference>
		<Preference android:title="@string/pref_title_policy">
			<intent android:action="org.jorge.lolin1.activities.POLICYACTIVITY"
				/>
		</Preference>
	</PreferenceCategory>
</PreferenceScreen>