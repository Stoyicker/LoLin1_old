<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<org.jorge.lolin1.func.custom.ScalableLinearLayout
		android:id="@+id/skin_root_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center">
		<RelativeLayout
			android:id="@+id/relative_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/skin_view"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:contentDescription="@string/skin_view_content_description"/>
			<TextView
				android:id="@+id/skin_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignBottom="@+id/skin_view"
				android:padding="@dimen/champion_skin_name_padding"
				style="@style/SkinNameStyle"/>
		</RelativeLayout>
	</org.jorge.lolin1.func.custom.ScalableLinearLayout>
</LinearLayout>