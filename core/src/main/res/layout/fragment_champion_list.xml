<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<com.twotoasters.jazzylistview.JazzyGridView
		android:id="@id/android:list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="@null"
		android:gravity="center"
		android:stretchMode="columnWidth"
		android:numColumns="auto_fit"
		android:paddingTop="@dimen/champion_grid_horizontal_spacing"
		android:paddingBottom="@dimen/champion_grid_horizontal_spacing"
		android:horizontalSpacing="@dimen/champion_grid_horizontal_spacing"
		android:verticalSpacing="@dimen/champion_grid_vertical_spacing"
		app:effect="grow"
		app:only_animate_new_items="false"/>
	<ImageView
		android:id="@id/android:empty"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:contentDescription="@string/empty_content"
		android:scaleType="centerInside"
		android:src="@drawable/nothing_to_do_here"/>
</LinearLayout>